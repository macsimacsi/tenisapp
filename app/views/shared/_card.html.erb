<% @courts.each do |court|%>
<div class="col-3">
  <div class="card">
    <h2 class="name"><%= court.name %></h2>
    <p class="content"><%= court.address %></p>
    <p class="content"><%= court.price %></p>
    <%= cl_image_tag court.photo.key, height: 180, width: 180, crop: :fill %>
    <%= link_to "ver", court_path(court), class:"btn btn-primary"%>
  </div>
</div>
<% end %>
