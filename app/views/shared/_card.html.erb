<div class="court-cards">
  <div class="card-container-index">
    <div class="card">
      <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% court.photos.each_with_index do |photo, index| %>
            <div class="carousel-item <%= index.zero? ? 'active' : '' %>" style="height: 100px; object-fit: cover;">
              <%= cl_image_tag photo.key, class: "d-block w-100 h-100", alt: "Court Photo" %>
            </div>
          <% end %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= court.name %></h5>
        <p class="card-text"><%= court.address %></p>
        <p class="card-text"><%= court.price %></p>
      </div>
      <div class="card-footer">
        <%= link_to "View Details", court_path(court), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
