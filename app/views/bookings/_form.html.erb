<%= simple_form_for [@court, @booking], html: { class: 'form-horizontal' } do |f| %>
    <div class="row">
      <!-- Vous pouvez ajuster la classe 'col-md-offset-1' pour dÃ©caler comme vous le souhaitez, par exemple 'col-md-offset-2', 'col-md-offset-3', etc. -->
      <div class="col-md-offset-1 col-md-10">
        <div class="form-group">
          <%= f.label :date, class: 'control-label' %>
          <%= f.input :date, as: :date, wrapper_html: { class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.label :beginning_time, class: 'control-label' %>
          <%= f.input :beginning_time, as: :time, minute_step: 30, ignore_date: true, wrapper_html: { class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.label :ending_time, class: 'control-label' %>
          <%= f.input :ending_time, as: :time, minute_step: 30, ignore_date: true, wrapper_html: { class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.button :submit, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
